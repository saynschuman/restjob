.otherKitchens
  padding: 15px 0 0

.kitchensCheckbox
  display: inline-block
  vertical-align: top
  width: 33%
  padding-right: 20px
  margin-bottom: 28px


.workExperienceList
  padding: 15px 0 0

  .workExperienceInput
    display: inline-block
    vertical-align: top
    width: 33%
    padding-right: 20px
    margin-bottom: 16px

.buttonsContainer
  margin-top: 18px
  .button
    margin-right: 20px
    display: inline-block
    width: 144px
    height: 35px
    text-align: center
    color: #fff
    border-radius: 3px
    padding-top: 11px
    cursor: pointer
    text-transform: uppercase
    font-size: 12px
    line-height: 14px
    &.red
      background-color: #EB5757
    &.blue
      background-color: #2D9CDB

::-webkit-input-placeholder
  color #828282
  font-weight: 300
  font-size: 15px
  line-height: 21px

::-moz-placeholder
  color #828282
  font-weight: 300
  font-size: 15px
  line-height: 21px

:-ms-input-placeholder
  color #828282
  font-weight: 300
  font-size: 15px
  line-height: 21px

:-moz-placeholder
  color #828282
  font-weight: 300
  font-size: 15px
  line-height: 21px

.addKitchen
  font-weight: 300
  font-size: 15px
  line-height: 21px
  width: 310px
  height: 35px
  border:1px solid #C4CCCF
  border-radius: 3px
  margin-top: 18px
  &:focus
    outline: none

.title
  font-size: 13px
  line-height: 15px
  margin-top: 18px

.labelCheckbox
  display: inline-block
  vertical-align: top
  width: 33%
  padding-right: 20px
  margin-bottom: 28px

