.passwordContainer
  display: block

.passwordInputLabel
  display: block
  font-size: 13px
  margin-bottom: 14px

.passwordInput
  input
    width: 231px
    display: block
    margin-bottom: 30px

.passwordContainer
  padding-top: 30px

.valid
  position: relative;
  display: block
  width: 231px
  &::after
    content: ''
    position: absolute
    right: -40px
    bottom: 6px
    width: 24px
    height: 24px
    background-image url("./i/valid.svg")

.notValid
  position: relative;
  display: block
  width: 231px
  &::before
    content: attr(data-not-val)
    position: absolute
    right: -151px
    bottom: 3px
    width: 100px
    color: #EB5757
    font-weight: 300
    font-size: 13px
    line-height: 15px
  &::after
    content: ''
    position: absolute
    right: -40px
    bottom: 6px
    width: 24px
    height: 24px
    background-image url("./i/notValid.svg")
  input
    border: 1px solid #EB5757 !important
    background-color: rgba(255,0,0,.2)
