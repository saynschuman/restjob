.photo
  text-align: center
  position: relative
  display: inline-block

.photoInner
  display: block
  width: 295px
  margin: 0 auto

.photoPreview
  width: 180px
  height: 180px
  display: block
  margin: 0 auto
  margin-top: 35px
  margin-bottom: 35px
  background-image: url("./i/photoPreview.svg")
  background-size: 100%
  cursor: pointer
  border-radius 100%
  border: 2px solid #fff
  &:hover
    border: 2px solid #2D9CDB

.photoTitle
  font-size: 13px
  line-height: 15px

.photoLink
  color: #fff
  font-size: 12px
  line-height: 18px
  font-weight: 300
  cursor: pointer
  width: 167px
  height: 35px
  text-align: center
  border-radius: 3px
  background-color: #2D9CDB
  text-transform: uppercase
  display: block
  margin: 0 auto
  padding-top: 9px