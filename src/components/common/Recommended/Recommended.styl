.recommended
  width: 127px
  position: absolute
  top: calc(50% - 7px)
  right: 0
  transform: translate3d(0, -50%, 0)
  padding-left: 50px
  font-size: 12px

  &::before
    content: ''
    position: absolute
    top: 50%
    left: 0
    transform: translate3d(0, -50%, 0)
    width: 40px
    height: 40px
    background: no-repeat center / contain

  &.headerSpecialHot::before
    background-image: url('./i/iconHot.svg')

  &.headerSpecialActive::before
    background-image: url('./i/iconActive.svg')

  &.headerSpecialRecommended::before
    background-image: url('./i/iconRecommended.svg')